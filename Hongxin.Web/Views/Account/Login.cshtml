@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <title>登录</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- CSS -->
    <link rel="stylesheet" href="Content/reset.css">
    <link rel="stylesheet" href="Content/login.css">
    <link href="Content/toastr.min.css" rel="stylesheet" />

    <script src="Scripts/jquery-2.0.3.min.js"></script>
    <script src="Scripts/toastr.min.js"></script>
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="Scripts/html5.js"></script>
    <![endif]-->

</head>

<body>
    <img src="../img/login_bg.jpg" width="100%" height="100%" style="position: fixed; z-index: -1;top: 0; left: 0;" />
    <div class="page-container">
        <h1>用户登录</h1>
        <form action="/Home/Index" method="get" onsubmit="return checkForm()">
            <div>
                <input type="text" name="username" class="username" placeholder="用户名" autocomplete="off" />
            </div>
            <div>
                <input type="password" name="password" class="password" placeholder="密&nbsp;&nbsp;&nbsp;码" oncontextmenu="return false" onpaste="return false" />
            </div>
            <button id="submit" type="submit">登&nbsp;&nbsp;&nbsp;录</button>
        </form>
    </div>

    <!-- Javascript -->

    <script>
        function checkForm() {
            var flag = false;
            var un = $('input[name=username]').val();
            var pw = $('input[name=password]').val();
            if (un == "admin" && pw == "1") {
                flag = true;
            } else {
                flag = false;
                toastr.error('用户名或密码错误！');
            }

            return flag;
        }
    </script>
</body>

</html>


